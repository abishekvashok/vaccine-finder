<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VaccineFoundActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/vaccine_available"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We found a vaccine"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
        <TextView
            android:id="@+id/textview_vaccine_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:text="We found you a vaccine."
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/button_book_vaccine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book now"
                android:layout_gravity="center_horizontal"
                style="?attr/materialButtonStyle"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/button_cancel_vaccine_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_gravity="center_horizontal"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>